@model List<Hotel>
<table class="table">
    <tr>
        <th>City</th>
        <th>Address</th>
        <th></th>
    </tr>
    @foreach(var hotel in @Model)
    { 
        <tr>
            <td>@hotel.City</td>
            <td>@hotel.Address</td>
            <td>
                @Html.ActionLink("Update","Update","Hotel", 
                new{hotelid=@hotel.Id,form="create"},
                new{@class="btn btn-secondary"})
            </td>
        </tr>
    }
</table>